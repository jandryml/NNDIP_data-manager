            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>
            <column name="active" type="BIT">
                <constraints nullable="false" />
            </column>
        </createTable>

        <addColumn tableName="limit_plan">
            <!-- TODO remove default value-->
            <!-- TODO add nullable-->

            <column name="year_period_id" type="BIGINT" >
